---
import { testimonials } from '../../data/testimonials';

const initials = (name: string) =>
  name.split(' ').map(n => n[0]).join('');

const colors = ['bg-blue-200 text-blue-700', 'bg-violet-200 text-violet-700', 'bg-emerald-200 text-emerald-700'];
---

<section class="py-20 md:py-28 lg:py-32 bg-slate-50">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="text-center mb-16">
      <p class="text-sm font-semibold uppercase tracking-wider text-blue-600 mb-3">Testimonials</p>
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900">
        What Agents Are Saying
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-6 md:gap-8">
      {testimonials.map((t, i) => (
        <div class="bg-white border border-slate-200 rounded-2xl p-6 md:p-8 hover:shadow-md transition-shadow">
          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {Array.from({ length: t.rating }).map(() => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-slate-700 leading-relaxed mb-6">
            "{t.quote}"
          </blockquote>

          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class={`w-10 h-10 rounded-full flex items-center justify-center text-sm font-semibold ${colors[i % colors.length]}`}>
              {initials(t.name)}
            </div>
            <div>
              <div class="text-sm font-semibold text-slate-900">{t.name}</div>
              <div class="text-sm text-slate-500">{t.title} Â· {t.brokerage}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
