---
const brokerages = [
  'Keller Williams',
  'RE/MAX',
  'Coldwell Banker',
  'eXp Realty',
  'Compass',
];
---

<section class="bg-slate-50 py-10 border-y border-slate-100">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <p class="text-center text-sm font-medium text-slate-500 mb-8">
      Trusted by agents at leading brokerages
    </p>
    <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-6">
      {brokerages.map((name) => (
        <div class="text-lg md:text-xl font-bold text-slate-300 tracking-tight select-none">
          {name}
        </div>
      ))}
    </div>
  </div>
</section>
