---
const stats = [
  { value: '$400+', label: 'Saved per transaction', sublabel: 'vs. a human TC' },
  { value: 'Zero', label: 'Missed deadlines', sublabel: 'AI tracks every date' },
  { value: '24/7', label: 'Always-on coordination', sublabel: 'Never sleeps, never drops the ball' },
  { value: '< 60s', label: 'To analyze a contract', sublabel: 'Every date, term, and defect' },
];
---

<section class="bg-slate-900 py-20 md:py-28">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-white">
        Results That Speak for Themselves
      </h2>
      <p class="mt-4 text-lg text-slate-400 max-w-2xl mx-auto">
        Real numbers from real agents using Britanni AI every day.
      </p>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
      {stats.map(({ value, label, sublabel }) => (
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-400 to-violet-400 bg-clip-text text-transparent font-display">
            {value}
          </div>
          <div class="mt-2 text-base font-semibold text-white">
            {label}
          </div>
          <div class="mt-1 text-sm text-slate-500">
            {sublabel}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
