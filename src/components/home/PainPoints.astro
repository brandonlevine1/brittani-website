---
const painPoints = [
  {
    icon: 'dollar',
    title: 'Expensive Human TCs',
    description: '$300–$500 per deal adds up fast. 10 deals a month? That\'s $5,000 gone from your commissions.',
    color: 'red',
  },
  {
    icon: 'clock',
    title: 'Missed Deadlines Kill Deals',
    description: 'One forgotten disclosure or expired contingency can blow up a transaction — and your reputation.',
    color: 'amber',
  },
  {
    icon: 'messages',
    title: 'Communication Black Holes',
    description: 'Juggling emails, texts, and calls across 5–10 parties per deal with no central hub is a recipe for chaos.',
    color: 'orange',
  },
];

const colors: Record<string, { bg: string; icon: string; border: string }> = {
  red: { bg: 'bg-red-50', icon: 'text-red-600', border: 'border-red-100' },
  amber: { bg: 'bg-amber-50', icon: 'text-amber-600', border: 'border-amber-100' },
  orange: { bg: 'bg-orange-50', icon: 'text-orange-600', border: 'border-orange-100' },
};
---

<section class="py-20 md:py-28 lg:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900">
        Agents Lose Deals to Admin Chaos
      </h2>
      <p class="mt-4 text-lg text-slate-600 max-w-2xl mx-auto">
        The coordination work behind every transaction is where deals — and profits — go to die.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 md:gap-8">
      {painPoints.map(({ icon, title, description, color }) => {
        const c = colors[color];
        return (
          <div class={`${c.bg} border ${c.border} rounded-2xl p-6 md:p-8`}>
            <div class={`w-12 h-12 ${c.bg} rounded-xl flex items-center justify-center mb-5`}>
              {icon === 'dollar' && (
                <svg class={`w-6 h-6 ${c.icon}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {icon === 'clock' && (
                <svg class={`w-6 h-6 ${c.icon}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {icon === 'messages' && (
                <svg class={`w-6 h-6 ${c.icon}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-slate-900 mb-2">{title}</h3>
            <p class="text-slate-600 leading-relaxed">{description}</p>
          </div>
        );
      })}
    </div>
  </div>
</section>
