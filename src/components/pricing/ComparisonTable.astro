---
import { comparisonFeatures } from '../../data/pricing';
---

<section class="py-20 md:py-28 bg-slate-50">
  <div class="max-w-5xl mx-auto px-6 md:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900">
        Compare Plans
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        See exactly what's included in each plan.
      </p>
    </div>

    <div class="bg-white border border-slate-200 rounded-2xl overflow-hidden shadow-sm">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-slate-200 bg-slate-50">
              <th class="px-6 py-4 text-sm font-semibold text-slate-900 w-1/2">Feature</th>
              <th class="px-6 py-4 text-sm font-semibold text-slate-900 text-center">Starter</th>
              <th class="px-6 py-4 text-sm font-semibold text-blue-600 text-center">Professional</th>
              <th class="px-6 py-4 text-sm font-semibold text-slate-900 text-center">Team</th>
            </tr>
          </thead>
          <tbody>
            {comparisonFeatures.map((category) => (
              <>
                <tr class="bg-slate-50/50">
                  <td colspan="4" class="px-6 py-3 text-xs font-semibold uppercase tracking-wider text-slate-500">
                    {category.category}
                  </td>
                </tr>
                {category.features.map((feature) => (
                  <tr class="border-b border-slate-100 last:border-b-0">
                    <td class="px-6 py-3.5 text-sm text-slate-700">{feature.name}</td>
                    <td class="px-6 py-3.5 text-center">
                      {typeof feature.starter === 'boolean' ? (
                        feature.starter ? (
                          <svg class="w-5 h-5 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Included"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                        ) : (
                          <svg class="w-5 h-5 text-slate-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Not included"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                        )
                      ) : (
                        <span class="text-sm text-slate-700">{feature.starter}</span>
                      )}
                    </td>
                    <td class="px-6 py-3.5 text-center bg-blue-50/30">
                      {typeof feature.professional === 'boolean' ? (
                        feature.professional ? (
                          <svg class="w-5 h-5 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Included"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                        ) : (
                          <svg class="w-5 h-5 text-slate-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Not included"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                        )
                      ) : (
                        <span class="text-sm text-slate-700">{feature.professional}</span>
                      )}
                    </td>
                    <td class="px-6 py-3.5 text-center">
                      {typeof feature.team === 'boolean' ? (
                        feature.team ? (
                          <svg class="w-5 h-5 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Included"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                        ) : (
                          <svg class="w-5 h-5 text-slate-300 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-label="Not included"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                        )
                      ) : (
                        <span class="text-sm text-slate-700">{feature.team}</span>
                      )}
                    </td>
                  </tr>
                ))}
              </>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
