---
interface Props {
  eyebrow: string;
  title: string;
  description: string;
  bullets: { icon: string; text: string }[];
  imageAlt: string;
  reversed?: boolean;
  isAI?: boolean;
}

const { eyebrow, title, description, bullets, imageAlt, reversed = false, isAI = false } = Astro.props;
---

<section class="py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <div class:list={['grid lg:grid-cols-2 gap-12 lg:gap-16 items-center', reversed && 'lg:grid-flow-dense']}>
      <!-- Text Content -->
      <div class:list={[reversed && 'lg:col-start-2']}>
        <div class="flex items-center gap-2 mb-4">
          <p class="text-sm font-semibold uppercase tracking-wider text-blue-600">{eyebrow}</p>
          {isAI && (
            <span class="inline-flex items-center gap-1 bg-violet-100 text-violet-700 text-xs font-semibold px-2 py-0.5 rounded-full">
              <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2l2.09 6.26L20.18 9l-5 4.27L16.82 20 12 16.9 7.18 20l1.64-6.73L4 9l5.91-.74L12 2z"/>
              </svg>
              AI
            </span>
          )}
        </div>
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 mb-4">
          {title}
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed mb-8">
          {description}
        </p>
        <ul class="space-y-4">
          {bullets.map(({ text }) => (
            <li class="flex items-start gap-3">
              <div class="mt-1 shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-slate-700 leading-relaxed">{text}</span>
            </li>
          ))}
        </ul>
        <div class="mt-8">
          <a
            href="#"
            class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors"
          >
            See It In Action
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Image Placeholder -->
      <div class:list={[reversed && 'lg:col-start-1']}>
        <div class="bg-gradient-to-br from-slate-100 to-slate-50 border border-slate-200 rounded-2xl aspect-[4/3] flex items-center justify-center">
          <div class="text-center p-8">
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5a2.25 2.25 0 002.25-2.25V5.25a2.25 2.25 0 00-2.25-2.25H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z" />
              </svg>
            </div>
            <p class="text-sm font-medium text-slate-400">{imageAlt}</p>
            <p class="text-xs text-slate-300 mt-1">Product screenshot coming soon</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
