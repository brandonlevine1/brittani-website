---
import '../styles/global.css';
import { SEO } from 'astro-seo';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
  jsonLd?: object | object[];
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = '/og-image.jpg',
  noindex = false,
  jsonLd,
} = Astro.props;

const siteUrl = 'https://brittani.ai';
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!doctype html>
<html lang="en" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={noindex}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: fullOgImage,
          url: canonical,
        },
        optional: {
          description: description,
          siteName: 'Britanni AI',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@britanniai',
        creator: '@britanniai',
      }}
    />

    {jsonLd && (
      Array.isArray(jsonLd) ? (
        jsonLd.map((schema) => (
          <script type="application/ld+json" set:html={JSON.stringify(schema)} />
        ))
      ) : (
        <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
      )
    )}
  </head>
  <body class="bg-white text-slate-900 font-sans">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-blue-600 focus:text-white focus:px-4 focus:py-2 focus:rounded-xl focus:text-sm focus:font-semibold"
    >
      Skip to content
    </a>
    <slot />

    <!-- Microsoft Clarity -->
    <script type="text/javascript" defer>
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "YOUR_CLARITY_ID");
    </script>
  </body>
</html>
