---
import PageLayout from '../layouts/PageLayout.astro';
import MissionHero from '../components/about/MissionHero.astro';
import StoryTimeline from '../components/about/StoryTimeline.astro';
import FounderCards from '../components/about/FounderCards.astro';
import Values from '../components/about/Values.astro';
import CTABanner from '../components/global/CTABanner.astro';

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Britanni AI",
  "url": "https://brittani.ai",
  "logo": "https://brittani.ai/favicon.svg",
  "description": "AI-powered transaction coordinator for residential real estate agents",
  "foundingDate": "2026",
  "founders": [
    {"@type": "Person", "name": "Brandon Levine", "jobTitle": "Co-founder & CTO"},
    {"@type": "Person", "name": "Jack Brighenti", "jobTitle": "Co-founder & CEO"},
    {"@type": "Person", "name": "Brittany Brighenti", "jobTitle": "Co-founder & COO"}
  ],
  "sameAs": [
    "https://linkedin.com/company/britanniai",
    "https://twitter.com/britanniai"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "email": "hello@brittani.ai",
    "contactType": "sales"
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://brittani.ai" },
    { "@type": "ListItem", "position": 2, "name": "About", "item": "https://brittani.ai/about" }
  ]
};
---

<PageLayout
  title="About Us â€” Built by Real Estate Professionals | Britanni AI"
  description="Meet the team behind Britanni AI. Founded by real estate professionals and AI experts who lived the transaction coordination chaos and built the solution."
  canonical="https://brittani.ai/about"
  jsonLd={[organizationSchema, breadcrumbSchema]}
>
  <MissionHero />
  <StoryTimeline />
  <FounderCards />
  <Values />

  <!-- Join Us / Contact -->
  <section class="py-20 md:py-28 bg-slate-50">
    <div class="max-w-3xl mx-auto px-6 md:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 mb-6">
        Want to Shape the Future of Real Estate?
      </h2>
      <p class="text-lg text-slate-600 leading-relaxed mb-8">
        We're building the future of real estate transaction management, and we're always looking for talented people who share our passion. If that sounds like you, we'd love to hear from you.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="mailto:hello@brittani.ai"
          class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-4 rounded-xl text-base transition-all duration-200 hover:shadow-lg hover:shadow-blue-600/25"
        >
          Get in Touch
        </a>
        <div class="flex items-center gap-4">
          <a
            href="https://linkedin.com/company/britanniai"
            class="text-slate-500 hover:text-blue-600 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Britanni AI on LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://twitter.com/britanniai"
            class="text-slate-500 hover:text-blue-600 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Britanni AI on Twitter"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <CTABanner />
</PageLayout>
